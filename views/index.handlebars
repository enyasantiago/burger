<h1>Eat Da Burger!</h1>

<div class="row">
    <div class="col-4">
        <h2>Burgers! Burgers! Burgers!</h2>
        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            {{!-- {{> burgers/burgers-block devoured=true}} --}}
            <li>{{id}}-{{burger_name}}</li>
            {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class="col-4">
        <h2>Add a Burger</h2>
        <form class="create-form">
        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger_name" name="name">
        </div>
        <button type="submit">Add Burger</button>
        </form>
    </div>

    <div class="col-4">
        <h2>These burgers have been devoured!</h2>
        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{!-- {{> burgers/burgers-block devoured=false}} --}}
            <li>{{id}}-{{burger_name}}</li>
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>