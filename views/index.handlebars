
<div class="container">

    <section class="video-container">
    <video id="video-hero" src="/assets/img/burger.mp4" autoplay loop playsinline muted></video>
    </section>


    <div class="col-12">
        <h2>Add a Burger</h2>
        <form class="create-form">
            <div class="form-group d-flex flex-wrap"">
                <input class="form-control form-control-sm mr-auto p-2" type='text' id='burger_name' name='name' placeholder="Burger Name">
            <button  class="btn btn-outline-warning btn-sm p-2" id="addburger"><i class="fas fa-hamburger"></i></button>
            </div>
        </form>
    </div>

    <div class="row">
    <div class="col-6">
        <h3>Burgers! Burgers! Burgers!</h3>
        <ul class="list-group">
            {{#each burgers}}
            {{#unless devoured}}
            <li class="list-group-item d-flex flex-wrap">
                {{> burgers/burger-block newdevoured=true}}
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    
    <div class="col-6">
        <h3>These burgers have been devoured!</h3>
        <ul class="list-group">
            {{#each burgers}}
            {{#if devoured}}
            <li class="list-group-item d-flex flex-wrap">
                {{> burgers/burger-block newdevoured=false}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
