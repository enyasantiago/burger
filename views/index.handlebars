<h1>Eat Da Burger!</h1>

<div class="row">
    <div class="col-4">
        <h2>Burgers! Burgers! Burgers!</h2>
        <ul>
        {{#each burgers}}
            {{#unless devoured}}
            <li>{{burger_name}}</li>
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class=“col-4”>
       <h2>Add a Burger</h2>
       <form class="create-form">
       <div class="form-group">
           <label for='burger'>Burger Name:</label>
           <input type='text' id='burger_name' name='name'>
       </div>
       <button id="addburger">Add Burger</button>
       </form>
   </div>

    <div class="col-4">
        <h2>These burgers have been devoured!</h2>
        <ul>
        {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            <li>{{burger_name}}
                <button type="button" data-id="{{id}}" data-devouredState="{{devoured}}">Devoured</button>
            </li>
            {{/if}}
        {{/each}}
        </ul>
    </div>
</div>